{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2018"],
    "module": "commonjs",
    "outDir": "./out",
    "importHelpers": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "files": ["src/main.ts", "vscode.d.ts", "vscode.proposed.d.ts"]
  //"include": ["test/**/*.ts"] TODO
}
